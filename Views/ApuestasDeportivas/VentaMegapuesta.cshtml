@model ConsumoDeAPI_MegaRed.Models.ApuestasDeportivasModel.MegaApuestaModel
@{
    ViewBag.Title = "VentaMegapuesta";
}

@using (Html.BeginForm())
{
    <div class="align">
        <div class="login">
            <header class="login__header">
                <h2>Apuestas Megapuestas VENTA</h2>
            </header>
            <div class="login__form">

                <fieldset disabled>

                    <div class="mb-3 ">
                        <label class="col-sm-8 col-form-label">Nombre usuario</label>
                        @Html.EditorFor(Model => Model.NombreApostador, new { htmlAttributes = new { @class = "input-lg", type = "text" } })
                    </div>

                    <div class="mb-3 ">
                        <label class="col-sm-8 col-form-label">Numero documento usuario</label>
                        @Html.EditorFor(Model => Model.destinatario, new { htmlAttributes = new { @class = "input-lg", type = "text" } })
                    </div>

                    <div class="mb-3 ">
                        <label class="col-sm-8 col-form-label">Valor a recargar</label>
                        @Html.EditorFor(Model => Model.valor, new { htmlAttributes = new { @class = "input-lg", type = "text" } })
                    </div>

                </fieldset>

                <div class="mb-3 ">
                    <label class="col-sm-4 col-form-label">Recibo</label>
                    <input class="input-lg" type="text" name="InputRecibo" />
                </div>
                <div>
                    <button type="submit" class="btn btn-primary btn-lg" Text="Button" runat="server" data-toggle="modal" data-target="#Modal1" name="btnMegapuest">Preventa</button>  @*data-toggle="modal" data-target="#Modal1"*@
                </div>

                <div class="h4">
                    @ViewBag.Alert
                </div>
            </div>
        </div>
    </div>

}