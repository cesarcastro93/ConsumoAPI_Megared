<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Vipay </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #DE4908" id="BarraNav">

        <div class="row">

            <div class="col-md-8">
                <a class="navbar-brand ">
                    <img src="https://i.postimg.cc/HW0FYdv5/Vpay-brandeo-Express-logo.gif" alt="" width="70" height="70">
                </a>
                <div class="navbar-brand " style="color:aliceblue">
                    <h3>Bienvenidos a Vipay</h3>
                </div>
            </div>

            <div class="navbar-header col-md-2">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            <div class="navbar-collapse collapse navbar-brand col-md-2">
                <ul class="nav navbar-nav">
                    <li class="h4">@Html.ActionLink("Regresar", "Main", "Home")</li>
                    <li class="h4">@Html.ActionLink("Salir", "Index", "Home")</li>
                </ul>
            </div>

        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>
    <div class="footer">
        <footer class="text-center text-lg-start bg-light text-muted">
            <!-- Copyright -->
            <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.05);">
                &copy; @DateTime.Now.Year
                <a class="text-reset fw-bold">Desarrollado por Virtual Technologies</a>
            </div>
            <!-- Copyright -->
        </footer>
    </div>
    



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
