@model ConsumoDeAPI_MegaRed.Models.RecargasModel.RecargaVentaModel
@{
    ViewBag.Title = "VenderRecarga";
}

@using (Html.BeginForm())
{
    <div class="align">
        <div class="login">
            <header class="login__header">
                <h2>Recargas</h2>
            </header>

            <div class="login__form">
                <div class="mb-3 ">
                    <label class="col-sm-4 col-form-label">Operador</label>
                    @Html.EditorFor(Model => Model.producto, new { htmlAttributes = new { @class = "input-lg", type = "text" } })
                </div>
                <div class="mb-3 ">
                    <label class="col-sm-6 col-form-label">Numero de celular</label>
                    @Html.EditorFor(Model => Model.destinatario, new { htmlAttributes = new { @class = "input-lg", type = "text" } })
                </div>
                <div class="mb-3 ">
                    <label class="col-sm-6 col-form-label">Valor</label>
                    @Html.EditorFor(Model => Model.valor, new { htmlAttributes = new { @class = "input-lg", type = "text" } })
                </div>

                <div class="mb-3 ">
                    <label class="col-sm-4 col-form-label">Recibo</label>
                    <input class="input-lg" type="text" name="InputRecibo" />
                </div>
                <div>
                    <button runat="server" type="submit" class="btn btn-primary btn-lg" Text="Button">Recargar</button>
                </div>

                <div class="h4">
                    @ViewBag.Alert
                </div>
            </div>
        </div>
    </div>



}

